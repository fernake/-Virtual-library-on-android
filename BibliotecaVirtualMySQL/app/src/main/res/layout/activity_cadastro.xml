<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="100px"
    tools:context=".Cadastro">


    <TextView
        android:id="@+id/txtSenhaInfo"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editSenha"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-128dp"
        android:text="Senha:" />

    <EditText
        android:id="@+id/editSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="128dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/txtn"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="194dp"
        android:text="Nome Completo:" />

    <EditText
        android:id="@+id/editNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtn"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtEmailInfo"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Email:" />

    <EditText
        android:id="@+id/editEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtEmailInfo"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txtfoneInfo"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editTelefone"
        android:layout_alignParentStart="true"
        android:text="Telefone:" />

    <EditText
        android:id="@+id/editTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="105dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/buttonCriarConta"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@color/colorPrimary"
        android:text="Cadastrar"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/txtTipoInfo"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/spinnerTipo"
        android:text="Tipo da Conta" />

    <Spinner
        android:id="@+id/spinnerTipo"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_alignBottom="@+id/editEmail"
        android:layout_alignParentEnd="true" />

</RelativeLayout>