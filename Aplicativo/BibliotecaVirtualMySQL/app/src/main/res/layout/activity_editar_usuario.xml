<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarUsuario">

    <TextView
        android:id="@+id/txtn"
        android:layout_width="118dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editNomeEdit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-150dp"
        android:text="Nome Completo:" />

    <EditText
        android:id="@+id/editNomeEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/txtEmailEdit"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editEmailEdit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-55dp"
        android:text="Email:" />

    <EditText
        android:id="@+id/editEmailEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/txtfoneInfo"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editTelefoneEdit"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-242dp"
        android:text="Telefone:" />

    <EditText
        android:id="@+id/editTelefoneEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="242dp"
        android:ems="10"
        android:inputType="phone" />

    <Button
        android:id="@+id/buttonEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonRedefinir"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="Editar"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/buttonRedefinir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:text="Redefinir CaracterÃ­stica"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="180dp"
        android:text="Senha:" />

    <EditText
        android:id="@+id/editSenhaEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="-180dp"
        android:ems="10"
        android:inputType="textVisiblePassword" />

</RelativeLayout>