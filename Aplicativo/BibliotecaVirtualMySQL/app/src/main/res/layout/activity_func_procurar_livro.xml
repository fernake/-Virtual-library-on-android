<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FuncProcurarLivro">

    <ListView
        android:id="@+id/ListViewTituloFunc"
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="50dp" />

    <Button
        android:id="@+id/buttonAtualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@color/colorPrimary"
        android:text="Atualizar Lista"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/TituloFuncTxt"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/SearchTituloButton"
        android:ems="10"
        android:hint="Informe o nome do título desejado"
        android:inputType="textPersonName" />

    <ImageButton
        android:id="@+id/SearchTituloButton"
        android:layout_width="82dp"
        android:layout_height="93dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <EditText
        android:id="@+id/CursoFuncTxt"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TituloFuncTxt"
        android:layout_below="@+id/TituloFuncTxt"
        android:ems="10"
        android:hint="Informe o curso do título desejado"
        android:inputType="textPersonName" />

</RelativeLayout>